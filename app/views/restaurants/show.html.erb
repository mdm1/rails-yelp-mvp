<div class="container">

  <div class="info-container">
    <h1> <%= @restaurant.name %></h1>

    <p><strong>Cuisine:</strong> &nbsp;&nbsp;&nbsp;&nbsp; <%= @restaurant.category.capitalize %></p>
    <p><strong>Address:</strong> &nbsp;&nbsp; <%= @restaurant.address.capitalize %></p>
    <p><strong>Phone:</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= @restaurant.phone_number %></p>
  </div>

  <div class="info-container">
    <h2>Reviews</h2>
    <p>
    <% @reviews.each do |review| %>
      <%= '⭐️' * review.rating %>
      <%= review.content %>
    </p>
    <% end unless @reviews.nil? %>
  </div>

  <p><%= link_to 'Back', restaurants_path %></p>
  <p><%= link_to 'Add a review', new_restaurant_review_path(@restaurant.id) %></p>

</div>
